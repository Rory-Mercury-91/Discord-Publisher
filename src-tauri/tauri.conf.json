{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Discord Publisher",
  "version": "1.4.5",
  "identifier": "com.publication.generator",
  "build": {
    "frontendDist": "../frontend/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev:frontend",
    "beforeBuildCommand": "npm run build:frontend"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Publication Discord",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "maximized": true,
        "center": true,
        "devtools": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "../assets/**/*"
    ],
    "windows": {
      "wix": {
        "language": "fr-FR"
      },
      "nsis": {
        "languages": [
          "French"
        ],
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Rory-Mercury-91/Discord-Publisher/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNEODU2NzIxRjBGOENGMjYKUldRbXovandJV2VGUGRqZksvMlZtelRZVnpRNGJLdTZ2ZVVMWXo0R2N4Z2JJclJESm9mSlJSVXAK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
